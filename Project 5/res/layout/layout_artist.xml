<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/artist_name">

        <TableRow
            android:id="@+id/artist_info_row1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_height="match_parent"
                android:text="Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/artist_info_row1_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="los angeles lakers lallaalala"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/artist_info_row2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView

                android:layout_height="match_parent"
                android:text="Followers"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/artist_info_row2_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="los angeles lakers lallaalala"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/artist_info_row3"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView

                android:layout_height="match_parent"
                android:text="Popularity"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/artist_info_row3_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="los angeles lakers lallaalala"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/artist_info_row4"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView

                android:layout_height="match_parent"
                android:text="Check At"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/artist_info_row4_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="los angeles lakers lallaalala"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />
</android.support.constraint.ConstraintLayout>